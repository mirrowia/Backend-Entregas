<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Perfil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

  <style>
    .small-image {
      max-width: 50px;
      /* Ajusta el tamaño máximo según tus necesidades */
      max-height: 50px;
    }
  </style>
</head>

<body>
  <!-- Barra superior -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <h1 class="navbar-brand fs-3 p-0">Perfil</h1>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item d-flex align-items-center">
          <a class="nav-link d-flex p-0 fs-5 align-items-center" href="/shop/sessions/profile"><i
              class="bi bi-person-circle ms-3"></i>
          </a>
          {{#unless (eq rol "admin")}}
          <a class="nav-link d-flex fs-5" href="/shop/community/chat">
            <i class="bi bi-people-fill ms-3"></i>
          </a>
          <a class="nav-link d-flex fs-5" href="/shop/carts/{{cart}}">
            <i class="bi bi-cart-fill ms-3"></i>
          </a>
          {{/unless}}
        </li>
      </ul>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title">usuario:
              <span class="text-info-emphasis">{{email}}</span>
            </h1>
          </div>
          <div class="card-body d-flex justify-content-between" style="max-height: 30vh;">
            <div class="row g-0">
              <div class="col-md-9">
                <div class="body-info p-3">
                  <p><strong>Nombre:</strong> {{name}}</p>
                  <p><strong>Apellido:</strong> {{lastname}}</p>
                  <p><strong>Email:</strong> {{email}}</p>
                  <p><strong>Edad:</strong> {{age}}</p>
                  <p><strong>Rol:</strong> {{rol}}</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="body-image text-center">
                  {{!-- CAMBIAR --}}
                  <img class="rounded-circle"
                    src="https://files.cults3d.com/uploaders/13479126/illustration-file/de3adb08-3b60-4738-8b7c-6fe6b88a3f90/Vault_Boy.png"
                    alt="Profile Picture" style="max-width: 100%; max-height: 100%;">
                  {{#unless (eq rol "admin")}}
                  <button class="btn btn-secondary" onclick="changeProfilePicture('{{_id}}')">Cambiar</button>
                  {{/unless}}
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-4">
            {{#unless (eq rol "admin")}}
            <div class="card-header">
              <h2>Documentación</h2>
            </div>
            <div class="card-body">
              <form action="/api/users/{{_id}}/documents" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="documents" class="form-label">Subir archivos:</label>
                  <input type="file" name="documents" id="documents" class="form-control" accept=".pdf" multiple />
                </div>
                <button type="submit" class="btn btn-secondary">Cargar</button>
              </form>
              <hr>

              <h4>Documentación presentada:</h4>

              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Identificación
                  <img src={{identificacion}} alt=""
                    class="img-fluid small-image">
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Comprobante de domicilio
                  <img src={{domicilio}} alt=""
                    class="img-fluid small-image">
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Comprobante de estado de cuenta
                  <img src={{cuenta}} alt=""
                    class="img-fluid small-image">
                </li>
              </ul>
            </div>
            {{/unless}}
            <div class="card-footer d-flex justify-content-between">
  {{#if (eq rol "admin")}}
    <div>
      <button class="btn btn-primary me-3" onclick="productsList()">Manage Products</button>
      <button class="btn btn-primary" onclick="userList()">Manage Users</button>
    </div>
  {{else}}
    <div>
      <a href="/shop/" class="btn btn-primary"><i class="bi bi-shop me-2"></i>Tienda</a>
    </div>
  {{/if}}
  <div>
    {{#unless (eq rol "admin")}}
      <a href="/shop/sessions/password-change" class="btn btn-warning"><i class="bi bi-key me-2"></i>Cambiar clave</a>
    {{/unless}}
    <button class="btn btn-danger" onclick="logout()"><i class="bi bi-box-arrow-right me-2"></i>Desconectar</button>
  </div>
</div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function logout() {
        fetch('/api/sessions/logout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        })
          .then(response => {
            if (response.status === 200) {
              window.location.href = '/shop/sessions/';
            } else {
              console.error('Error al cerrar sesión');
            }
          })
          .catch(error => {
            console.error('Error inesperado:', error);
          });
      }
      function cart(event) {
        const id = event.target.getAttribute('cart');
        window.location.href = `/shop/carts/${id}`;
      }
      function productsList() {
        window.location.href = "/shop/manager";
      }

            function userList() {
        window.location.href = "/shop/sessions/users-management/";
      }

      function changeProfilePicture(uid) {
        Swal.fire({
          title: 'Subir nueva imagen de perfil',
          input: 'file',
          inputAttributes: {
            accept: 'image/*',
            'aria-label': 'Sube tu imagen',
            name: 'profile_image',
          },
          showCancelButton: true,
          confirmButtonText: 'Guardar',
          cancelButtonText: 'Cancelar',
          showLoaderOnConfirm: true,
          preConfirm: (file) => {
            return new Promise((resolve) => {
              const formData = new FormData();
              formData.append('profile_image', file);

              fetch(`/api/users/${uid}/profile`, {
                method: 'POST',
                body: formData,
              })
                .then(response => {
                  if (response.ok) {
                    resolve();
                  } else {
                    throw new Error('Error al subir la imagen');
                  }
                })
                .catch(error => {
                  console.error('Error:', error);
                  Swal.showValidationMessage('Error al subir la imagen');
                });
            });
          },
          allowOutsideClick: () => !Swal.isLoading(),
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire('¡Imagen subida con éxito!', '', 'success');
            // Puedes actualizar la imagen en la página si es necesario
            // Ejemplo: document.getElementById('profile-image').src = URL.createObjectURL(file);
          }
        });
      }
    </script>
</body>

</html>