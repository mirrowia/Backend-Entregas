    <p>Comprador: {{ticket.purchaser}}</p>
  </div>

  <div class="ticket">
    <h2>Código de Compra: {{ticket.code}}</h2>
    <p>Total de unidades compradas: {{ticket.totalQuantity}}</p>
    <p>Comprador: {{ticket.purchaser}}</p>
  </div>

  <h3>Productos Comprados:</h3>
  <ul>
    {{#each purchasedProducts}}
    <li>{{this.productName}} - Cantidad: {{this.totalQuantity}}</li>
    {{/each}}
  </ul>

  <h3>Productos No Comprados:</h3>
  <ul>
    {{#each notPurchasedProducts}}
    <li>{{this.productName}} - Cantidad solicitada: {{this.totalQuantity}}</li>
    {{/each}}
  </ul>
