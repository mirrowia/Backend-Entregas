<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Perfil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
</head>

<body>
  <!-- Barra superior -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <h1 class="navbar-brand fs-3 p-0">Perfil</h1>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item d-flex align-items-center">
          <a class="nav-link d-flex p-0 fs-5 align-items-center" href="/api/sessions/">
            <span>{{email}}</span><i class="bi bi-person-circle ms-3"></i>
          </a>
          {{#unless (eq rol "Admin")}}
          <a class="nav-link d-flex p-0 fs-5" href="/api/carts/{{cart}}">
            <i class="bi bi-cart-fill ms-3"></i>
          </a>
          {{/unless}}
        </li>
      </ul>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title">usuario:
              <span class="text-info-emphasis">{{email}}</span>
            </h1>
          </div>
          <div class="card-body">
            <p><strong>Nombre:</strong> {{name}}</p>
            <p><strong>Apellido:</strong> {{lastname}}</p>
            <p><strong>Email:</strong> {{email}}</p>
            <p><strong>Edad:</strong> {{age}}</p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            {{#if (eq rol "Admin")}}
            <button class="btn btn-primary" onclick="productsList()">Manage
              Products</button>
            {{else}}
            <div>
              <a href="/api/products/list" class="btn btn-primary"><i class="bi bi-shop me-2"></i>Tienda</a>
            </div>
            {{/if}}
            <div>

              {{#unless (eq rol "Admin")}}
              <a href="/api/sessions/passwordChange" class="btn btn-warning"><i class="bi bi-key me-2"></i>Cambiar
                clave</a>
              {{/unless}}
              <button class="btn btn-danger" onclick="logout()"><i class="bi bi-box-arrow-right me-2"></i>
                Desconectar</button>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function logout() {
      fetch('/api/sessions/logout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
        .then(response => {
          if (response.status === 200) {
            window.location.href = './login';
          } else {
            console.error('Error al cerrar sesiÃ³n');
          }
        })
        .catch(error => {
          console.error('Error inesperado:', error);
        });
    }
    function cart(event) {
      const id = event.target.getAttribute('cart');
      window.location.href = `/api/carts/${id}`;
    }
    function productsList() {
      window.location.href = "/api/products/manager";
    }
  </script>
</body>

</html>