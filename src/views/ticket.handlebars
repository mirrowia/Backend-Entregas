          {{#unless (eq rol "Admin")}}
          <a class="nav-link d-flex fs-5" href="/api/community">
            <i class="bi bi-people-fill ms-3"></i>
          </a>
          <a class="nav-link d-flex fs-5" href="/api/carts/{{cart}}">
            <i class="bi bi-cart-fill ms-3"></i>
          </a>
          {{/unless}}
        </li>
      </ul>
